<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="org.metastringfoundation.healthheatmap.persistence.truth">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.metastringfoundation.healthheatmap.pojo.DataElement</class>
        <class>org.metastringfoundation.healthheatmap.pojo.Geography</class>
        <class>org.metastringfoundation.healthheatmap.pojo.Indicator</class>
        <class>org.metastringfoundation.healthheatmap.pojo.Source</class>


        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/healthheatmap"/>
            <property name="hibernate.connection.username" value="metastring"/>

            <!-- TODO: https://stackoverflow.com/a/8839779 the password -->
            <property name="hibernate.connection.password" value="metastring"/>
            <property name="hibernate.connection.pool_size" value="5"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.halt.on.error" value="true"/>

            <property name="hibernate.search.backends.myBackend.type" value="elasticsearch" />
            <property name="hibernate.search.backends.myBackend.index_defaults.lifecycle.minimal_required_status" value="yellow"/>
            <property name="hibernate.search.default_backend" value="myBackend"/>
        </properties>
    </persistence-unit>
</persistence>