<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="org.metastringfoundation.healthheatmap.persistence.truth">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.metastringfoundation.healthheatmap.pojo.Indicator</class>
        <class>org.metastringfoundation.healthheatmap.pojo.Entity</class>
        <class>org.metastringfoundation.healthheatmap.pojo.DataElement</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/healthheatmap"/>
            <property name="hibernate.connection.username" value="metastring"/>
            <property name="hibernate.connection.pool_size" value="5"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>